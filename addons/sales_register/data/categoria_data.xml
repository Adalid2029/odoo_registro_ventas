<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Datos iniciales para categorías -->
        <record id="categoria_alimentos" model="sales.categoria">
            <field name="nombre">Compras</field>
            <field name="descripcion">Ventas de Productos</field>
        </record>

        <record id="categoria_bebidas" model="sales.categoria">
            <field name="nombre">Ventas</field>
            <field name="descripcion">Ventas de Productos</field>
        </record>

        <!-- Datos iniciales para métodos de pago -->
        <record id="metodo_efectivo" model="sales.metodo_pago">
            <field name="nombre">Compras</field>
            <field name="descripcion">Compras de Productos</field>
        </record>

        <record id="metodo_transferencia" model="sales.metodo_pago">
            <field name="nombre">Transferencia Bancaria</field>
            <field name="descripcion">Transferencia directa a cuenta bancaria</field>
        </record>

        <record id="metodo_cheque" model="sales.metodo_pago">
            <field name="nombre">Cheque</field>
            <field name="descripcion">Pago con cheque</field>
        </record>

        <record id="metodo_credito" model="sales.metodo_pago">
            <field name="nombre">Crédito</field>
            <field name="descripcion">Venta a crédito</field>
        </record>
    </data>
</odoo>