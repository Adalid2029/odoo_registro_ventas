<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- VISTA FORMULARIO SALDO CLIENTE -->
    <record id="view_saldo_cliente_form" model="ir.ui.view">
        <field name="name">sales.saldo_cliente.form</field>
        <field name="model">sales.saldo_cliente</field>
        <field name="arch" type="xml">
            <form string="Saldo del Cliente">
                <sheet>
                    <group>
                        <group>
                            <field name="cliente_id" options="{'no_create': True}" />
                            <field name="saldo_total" />
                            <field name="fecha_actualizacion" />
                            <field name="estado_cliente" />
                        </group>
                        <group>
                            <field name="total_operaciones" />
                            <field name="total_ventas" />
                            <field name="total_pagado" />
                            <field name="cliente_email" />
                            <field name="cliente_telefono" />
                        </group>
                    </group>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- VISTA LISTA SALDO CLIENTE -->
    <record id="view_saldo_cliente_list" model="ir.ui.view">
        <field name="name">sales.saldo_cliente.list</field>
        <field name="model">sales.saldo_cliente</field>
        <field name="arch" type="xml">
            <list string="Saldos de Clientes" 
                  decoration-danger="saldo_total > 0"
                  decoration-success="saldo_total == 0"
                  decoration-info="saldo_total &lt; 0">
                <field name="cliente_id" />
                <field name="saldo_total" sum="Total Saldos" />
                <field name="estado_cliente" />
                <field name="total_operaciones" sum="Total Operaciones" />
                <field name="total_ventas" sum="Total Ventas" />
                <field name="total_pagado" sum="Total Pagado" />
                <field name="fecha_actualizacion" />
                <field name="cliente_email" />
                <field name="cliente_telefono" />
                <button name="action_ver_operaciones" type="object" string="Ver Operaciones" class="btn-primary"/>
            </list>
        </field>
    </record>

    <!-- VISTA BÚSQUEDA SALDO CLIENTE -->
    <record id="view_saldo_cliente_search" model="ir.ui.view">
        <field name="name">sales.saldo_cliente.search</field>
        <field name="model">sales.saldo_cliente</field>
        <field name="arch" type="xml">
            <search string="Buscar Saldos de Clientes">
                <field name="cliente_id"/>
                <field name="estado_cliente"/>
                
                <filter string="Al Día" name="al_dia" domain="[('estado_cliente', '=', 'al_dia')]"/>
                <filter string="Saldo Pendiente" name="pendiente" domain="[('estado_cliente', '=', 'pendiente')]"/>
                <filter string="Adelanto" name="adelanto" domain="[('estado_cliente', '=', 'adelanto')]"/>
                
                <group expand="0" string="Agrupar Por">
                    <filter string="Estado" name="group_estado" context="{'group_by': 'estado_cliente'}"/>
                    <filter string="Fecha Actualización" name="group_fecha" context="{'group_by': 'fecha_actualizacion'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- VISTA KANBAN PARA RESUMEN RÁPIDO -->
    <record id="view_saldo_cliente_kanban" model="ir.ui.view">
        <field name="name">sales.saldo_cliente.kanban</field>
        <field name="model">sales.saldo_cliente</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="cliente_id"/>
                <field name="saldo_total"/>
                <field name="estado_cliente"/>
                <field name="total_operaciones"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <h4><field name="cliente_id"/></h4>
                                    <span class="float-right">
                                        <t t-if="record.estado_cliente.raw_value == 'al_dia'">
                                            <span class="badge badge-success">Al Día</span>
                                        </t>
                                        <t t-if="record.estado_cliente.raw_value == 'pendiente'">
                                            <span class="badge badge-warning">Pendiente</span>
                                        </t>
                                        <t t-if="record.estado_cliente.raw_value == 'adelanto'">
                                            <span class="badge badge-info">Adelanto</span>
                                        </t>
                                    </span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <strong>Saldo: <field name="saldo_total"/></strong><br/>
                                    Operaciones: <field name="total_operaciones"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ACCIÓN SALDO CLIENTE -->
    <record id="action_saldo_cliente" model="ir.actions.act_window">
        <field name="name">Saldos de Clientes</field>
        <field name="res_model">sales.saldo_cliente</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ¡Controla los saldos de tus clientes!
            </p>
            <p>
                Aquí puedes ver el estado de cuenta de cada cliente y sus operaciones.
            </p>
        </field>
    </record>

</odoo>